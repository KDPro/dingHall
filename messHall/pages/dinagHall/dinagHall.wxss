/* pages/dinagHall/dinagHall.wxss */
page {
  height:100%;
}
.h3 {
  color:#696969;
  font-size: 16px;
  letter-spacing: 1px;
  padding:15px 0; 
  text-align: center;
}
.inL {
  width:80%;
  margin:0 auto;
  display:flex;
  margin-bottom:20px;
}
.title {
  flex:3;
  text-align: right;
  font-size:14px;
  margin-top:4px;
}
.flexI {
  flex:8;
}
.input {
  width:100%;
  border:1px solid #bcbcbc;
  height:30px;
  line-height:30px;
  margin-left:10px;
  border-radius: 30px;
  padding-left:10px;
  box-sizing: border-box;  
  font-size:14px;
}
.add {
  width:100px;
  height:80px;
  border:1px solid #bcbcbc;
  margin-left:10px;
  border-radius: 10px;
  background-color: #f7f7f7;
  text-align: center;
  line-height:70px;
  color:#cacaca;
  font-size:60px;
  float:left;
}
.img-v {
  width:100%;
  margin:0;
}
.img {
  width:100px;
  height:80px;
  position:relative;
  float:left;
  margin-bottom:10px;
  margin-left:10px;
}
.delete-btn {
  position:absolute;
  right:0;
  top:0;
  width:20px;
  height:20px;
  background-color:rgba(0,0,0,.5);
  font-size:12px;
  line-height:20px;
  text-align: center;
  color:white;
  border-radius: 100%;
}
.img image {
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  left:0;
}
textarea {
  width:calc(100% - 20px);
  border:1px solid #bbb;
  border-radius: 5px;
  margin-left:10px;
  float:left;
  padding:10px; 
  /* box-sizing: border-box; */
  font-size:14px;
}
.btn {
  width:80%;
  margin:0 auto;
  height:40px;
  line-height:40px;
  text-align: center;
  font-size:16px;
  color:white;
  background: #f1941c;
  border-radius:40px;
}