  page {
    height:100%;
  }
  .confirms {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    font-size:14px;
  }
  .orderCon {
    width: 100%;
    height:100%;
    box-sizing: border-box;
    border:10px solid #f2f2f2;
    display: flex;
    flex-direction: column;
  }
  .orderDetail {
    height:auto;
    padding:15px 15px 0;
    border-bottom:5px solid #f2f2f2;
  }
  .orderDetail .h3 {
    color:#0195ab;
    font-size: 15px;
    letter-spacing: 1px;
    margin-bottom:5px;
    text-align: center;
  }
  .orderDetail .p {
    padding:10px 0;
    border-bottom:1px solid rgba(97,97,97,.2);
    display: flex;
  }
  .orderDetail .p:last-child {
    border:none;
  }
  .orderDetail .p text:first-child {
    flex: 2;
    text-align: left;
  }
  .orderDetail .p text:last-child {
    flex: 3;
    text-align: right;
  }
  .orderList {
    flex: 1;
    padding:0 15px;
    padding-top:15px;
    box-sizing: border-box;
    border-bottom:5px solid #f2f2f2;
    overflow: hidden;
  }
  .orderList .h3 {
    color:#0195ab;
    font-size: 15px;
    letter-spacing: 1px;
    margin-bottom:5px;
    text-align: center;
  }
  .orderList .content {
     height:calc(100% - 15px);
  }
  .orderList .content view {
    padding:15px 0;
    border-bottom:1px solid rgba(97,97,97,.2);
    display: flex;
  }
  .orderList .content view text {
    flex: 1;
    text-align: center;
  }
  .orderList.content view text:first-child {
    text-align: left;
  }
  .orderList .content view text:last-child {
    text-align: right;
  }
  .orderPay {
    padding:20px 0;
    width:100%;
    height:auto;
  }
  .orderPay .button {
    width:80%;
    height:40px;
    margin:0 auto;
    border-radius:40px;
    background-color:#f96819;
    text-align: center;
    line-height: 40px;
    color:white;
    font-size: 16px;
    letter-spacing: 1px;
  }
